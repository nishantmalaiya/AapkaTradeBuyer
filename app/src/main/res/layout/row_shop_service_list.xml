<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/relativeshop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dip"
        >

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/one_hundred_twenty_dip"
            android:layout_height="@dimen/one_hundred_twenty_dip"
            android:src="@drawable/banner"
            android:scaleType="fitXY"
            />


        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rose "
            android:layout_toRightOf="@+id/imgProduct"
            android:layout_marginLeft="@dimen/ten_dip"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/tvProductUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit: Ltr"
            android:layout_toRightOf="@+id/imgProduct"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_below="@+id/tvProductName"
            />


        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 74.00"
            android:layout_toRightOf="@+id/imgProduct"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_below="@+id/tvProductUnit"
            android:textColor="@color/orange"
            />

        <Button
            android:id="@+id/buttonAddtoCart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fourty_dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_sky_color_border"
            android:text="Add to Cart"
            android:padding="@dimen/five_dip"
            android:layout_below="@+id/tvProductUnit"
            android:textColor="@color/green"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_dip"
            android:layout_toRightOf="@+id/imgProduct"
            android:layout_below="@+id/tvProductPrice"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/ten_dip">


            <LinearLayout
                android:layout_width="@dimen/one_hundred_twenty_dip"
                android:layout_height="@dimen/fifty_dip"
                android:layout_marginBottom="@dimen/three_dip"
                android:layout_toRightOf="@+id/tvQtyHeading"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >


                <RelativeLayout
                    android:id="@+id/relativeViewPlus"
                    android:layout_width="@dimen/thirty_dip"
                    android:layout_height="@dimen/thirty_dip"
                    android:background="@drawable/circle_gray_border"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_shop_plus"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeQuantity"
                    android:layout_width="@dimen/twenty_five_dip"
                    android:layout_height="@dimen/thirty_dip"
                    android:padding="2dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="1"
                        android:textColor="@color/shop_product_item"
                        android:textSize="@dimen/fifteen_dip"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeViewMinus"
                    android:layout_width="@dimen/thirty_dip"
                    android:layout_height="@dimen/thirty_dip"
                    android:background="@drawable/circle_gray_border"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_shop_minus"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/slate_gray"
        android:layout_below="@+id/relativeshop_service"
        android:layout_marginTop="@dimen/five_dip"
        ></View>



</RelativeLayout>