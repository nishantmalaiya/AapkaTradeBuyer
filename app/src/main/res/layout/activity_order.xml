<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/five_dip"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <RelativeLayout
        android:id="@+id/relativeOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">





        <RelativeLayout
            android:id="@+id/relativeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCompanyName"
            android:layout_marginTop="5dp"
            >


            <LinearLayout
                android:id="@+id/linearLayoutImage"
                android:layout_width="100dp"
                android:layout_height="90dp"
            android:orientation="horizontal"
                android:padding="5dp"
                >






            </LinearLayout>


            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shopname"
                android:layout_toRightOf="@+id/linearLayoutImage"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/buttonDespatched"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/buttonDespatched"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:text="Dispatched"
                android:textSize="13sp"
                android:src="@drawable/ic_delete"
                android:textColor="#066C57"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"

                android:padding="5dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sellerName"
                android:layout_toRightOf="@+id/linearLayoutImage"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tvUserName"
                android:textColor="#066C57"
                android:layout_marginTop="2dp"
                />


            <TextView
                android:id="@+id/tvCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productprize"
                android:layout_toRightOf="@+id/linearLayoutImage"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tvMobileNo"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status: Packaged"
                android:layout_toRightOf="@+id/linearLayoutImage"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tvCreatedDate"
                android:layout_marginTop="2dp"

                />

        </RelativeLayout>




        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:layout_below="@+id/relativeContainer"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat ,6th may 2017 11:24 am Payment  Approved"
            android:textColor="#066C57"
            android:layout_below="@+id/relativeContainer"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgLocation"
            android:layout_marginLeft="5dp"
            />






    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
 android:id="@+id/view1"
        android:layout_below="@+id/relativeOrderDetail"
        android:background="#D2D0D0"
        ></View>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/view1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/five_dip"
    android:paddingBottom="@dimen/five_dip"


    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgPaymentApproval"
        android:text="Delivered expected by 28 jan 2017" />

    <ImageView
        android:id="@+id/imgPaymentApproval"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_location"

        android:layout_marginTop="5dp"
        />


</RelativeLayout>
</RelativeLayout>

</android.support.v7.widget.CardView>



